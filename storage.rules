rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Default rules for banners and other images
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // PDF files with access control
    match /pdfs/{pdfFileName} {
      allow read: if true; // Allow read for now, we'll handle access control in the app
      allow write: if request.auth != null;
    }

    // PDF thumbnails are always public
    match /pdf-thumbnails/{imageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
